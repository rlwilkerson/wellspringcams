    </div>

    <div class="row">
        <div class="col-md-6">
            <span style="display: block !important; width: 320px; text-align: center; font-family: sans-serif; font-size: 12px;">
                <a href="http://www.wunderground.com/cgi-bin/findweather/getForecast?query=zmw:37174.1.99999&bannertypeclick=wu_clean2day" title="Spring Hill, Tennessee Weather Forecast" target="_blank">
                    <img id="weatherImage" src="http://weathersticker.wunderground.com/weathersticker/cgi-bin/banner/ban/wxBanner?bannertype=wu_clean2day_cond&airportcode=KMRC&ForcedCity=Spring Hill&ForcedState=TN&zip=37174&language=EN" alt="Find more about Weather in Spring Hill, TN" width="300" />
                </a>
                <br>
                <a href="http://www.wunderground.com/cgi-bin/findweather/getForecast?query=zmw:37174.1.99999&bannertypeclick=wu_clean2day" title="Get latest Weather Forecast updates" target="_blank">Click for weather forecast</a>
            </span>
        </div>
    </div>        
</section>


@section scripts
{
    <script type="text/javascript">
        $(function () {
            UpdateWeather();
        });
        
        function UpdateWeather() {
            $("#weatherImage").attr('src', function(i, old) {
                return "http://weathersticker.wunderground.com/weathersticker/cgi-bin/banner/ban/wxBanner?bannertype=wu_clean2day_cond&airportcode=KMRC&ForcedCity=Spring Hill&ForcedState=TN&zip=37174&language=EN" + "&rand=" + new Date().getTime();
            });
            setTimeout(UpdateWeather, 300000);
        }
</script>
}

